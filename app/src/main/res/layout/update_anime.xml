<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/updTextAnimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="229dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Anime title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/updTextEpisodesNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="283dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:hint="Number of episodes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/updSpinnerIsViewed"
        android:layout_width="210dp"
        android:layout_height="47dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="340dp"
        android:entries="@array/isViewedVariants"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/updSaveAnime"
        android:layout_width="97dp"
        android:layout_height="49dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="404dp"
        android:text="save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteAnime"
        android:layout_width="97dp"
        android:layout_height="49dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="453dp"
        android:text="Delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>